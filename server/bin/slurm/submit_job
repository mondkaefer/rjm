#!/bin/bash

if [ "$#" != "1" ]; then
  echo "Error: No job description file specified" >&2
  exit 1
fi

job_file=${1}

if [ ! -f ${job_file} ]; then
  echo "Error: Job description file ${job_file} doesn't exist or is not a file" >&2
  exit 1
fi

output=$(sbatch --export=NONE ${job_file})
rc=$?
if [ "${rc}" != "0" ]; then
  exit 1
fi

job_id=$(echo ${output} | rev | cut -d\  -f1 | rev)
echo ${job_id}
