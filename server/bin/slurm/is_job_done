#!/bin/bash

if [ "$#" != "1" ]; then
 echo "Error: No job id specified" >&2
 exit 1
fi

job_id="${1}"

res=$(squeue --job ${job_id} >/dev/null 2>/dev/null)
rc=$?
if [ "${rc}" != "0" ]; then
  echo "There was a problem getting the job state. Perhaps an invalid job id?" >&2
  exit 1
fi

res=$(squeue --job ${job_id} | grep ${job_id})
status=$(echo ${res} | cut -d\  -f5)

if [ "${status}" == "" ] || [ "${status}" == "C" ] || [ "${status}" == "CA" ]; then
  echo 'True'
else
  echo 'False'
fi
